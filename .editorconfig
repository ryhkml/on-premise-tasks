# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = true

[*.yml,*.yaml]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.ts]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false